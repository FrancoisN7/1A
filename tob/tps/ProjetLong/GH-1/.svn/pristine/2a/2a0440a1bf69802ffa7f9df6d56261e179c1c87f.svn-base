package Affichable;

import javax.swing.ImageIcon;

/* Interface pour les éléments affichables */
public interface Affichable {

	/**
	 * Obtenir l'image d'un élément affichable.
	 * @return String désignant l'image
	 */
	ImageIcon getImage();

	/**
	 * Obtenir l'abscisse de la position de l'image.
	 * @return entier correspondant à l'abscisse sur la fenetre
	 */
	int getX();

	/**
	 * Obtenir l'ordonnée de la position de l'image.
	 * @return entier correspondant à l'ordonnée sur la fenêtre
	 */
	int getY();

	/**
	 * Obtenir la largeur de l'image.
	 * @return entier correspondant à la longueur de l'image.
	 */
	int getLargeur();
	
	/**
	 * Obtenir la hauteur de l'image.
	 * @return entier correspondant à la largeur de l'image.
	 */
	int getHauteur();

	/**
	 * Obtenir le nom de l'élément.
	 * @return le nom de l'élément
	 */
	String getNom();
}
